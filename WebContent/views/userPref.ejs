<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Link to external CSS file -->
    <link rel="stylesheet" href="css/style2.css">
    <!-- Meta tags for character set and viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title of the page -->
    <title>SET YOUR PREFERENCES</title>
</head>

<body>
    <!-- Page heading -->
    <h1>SET YOUR PREFERENCES</h1>

    <!-- Form for user preferences -->
    <form id="preferencesForm" action="/users/userPref" method="post" onsubmit="showConfirmation(event)">

        <!-- Preferred Location input -->
        <div style="text-align: center;">
            <label for="location">Preferred Location:</label><br>
            <input type="text" id="location" name="preferredCity"><br><br>
        </div>

        <!-- Preferred Temperature Unit input -->
        <div style="text-align: left;">
            <label for="temperature">Preferred Temperature Unit:</label><br>
            <div style="display: inline-block; text-align: left;">
                <!-- Radio buttons for Celsius and Fahrenheit -->
                <input type="radio" id="celsius" name="temperatureUnit" value="Celsius">
                <label for="celsius">Celsius</label><br>
                <input type="radio" id="fahrenheit" name="temperatureUnit" value="Fahrenheit">
                <label for="fahrenheit">Fahrenheit</label><br><br>
            </div>
        </div>

        <!-- Email Notifications input -->
        <div style="text-align: left;">
            <label for="notifications">Sign up for email notifications:</label><br>
            <div style="display: inline-block; text-align: left;">
                <!-- Radio buttons for true (yes) and false (no) -->
                <input type="radio" id="true" name="notifications" value="true">
                <label for="true">Yes</label><br>
                <input type="radio" id="false" name="notifications" value="false">
                <label for="false">No</label><br><br>
            </div>
        </div>

        <!-- Submit button -->
        <div style="text-align: center;">
            <input type="submit" value="Save Preferences">
        </div>
    </form>

    <!-- Confirmation message -->
    <div id="confirmation" style="display: none; text-align: center;"></div>

    <!-- JavaScript function to show confirmation message -->
    <script>
        function showConfirmation(event) {
            event.preventDefault();

            // Hide the form
            document.getElementById('preferencesForm').style.display = 'none';

            // Show the confirmation message
            document.getElementById('confirmation').innerHTML = 'Your preferences are saved!';
            document.getElementById('confirmation').style.display = 'block';
        }
    </script>

</body>

</html>